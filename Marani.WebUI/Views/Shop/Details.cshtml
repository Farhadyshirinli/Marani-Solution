@model Product


@{
    ViewData["Title"] = "Index";
}



<partial name="_MainMenu" />


<!-- Product Page Section Beign -->
<section class="product-page">
    <div class="container">
        <div class="product-control">
            <a asp-controller="home" asp-action="index">Home</a>
            <a asp-controller="Shop" asp-action="Wishlist">Wishlist</a>
            <a asp-controller="Shop" asp-action="Basket">Basket</a>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="product-slider owl-carousel">
                    <div class="product-img">
                        <figure>
                            @foreach (var item in Model.ProductImages)
                            {
                                <img src="~/uploads/images/@item.Name" alt="">

                            }

                            <div class="p-status">new</div>
                        </figure>
                    </div>
                
                </div>

            </div>
            <div class="col-lg-6">
                <div class="product-content">
                    <h2>@Model.Name</h2>
                    <div class="pc-meta">
                        <h5>@Model.Price $</h5>

                    </div>
                    <ul class="tags">
                        <li><span>Stock Keeping Unit :</span> @Model.StockKeepingUnit</li>
                        @*<li><span>Product Information:</span>@Model.Description</li>*@
                        <li><span>Description:</span> @Model.ShortDescription</li>
                    </ul>
                  @*
                    <a href="#" class="primary-btn pc-btn">Add to cart</a>*@
                    <ul class="p-info">
                        <li>Product Information</li>
                        <li>Reviews</li>
                        <li>Product Care</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Page Section End -->
<!-- Related Product Section Begin -->
<section class="latest-products spad">
    <div class="container">
        <div class="product-filter">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section-title">
                        <h2>Latest Products</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="product-list">
            @await Component.InvokeAsync("LatestProducts")
        </div>
    </div>
</section>
<!-- Related Product Section End -->
<!-- Footer Section Begin -->
<partial name="_FooterWidget" />
<!-- Footer Section End -->
