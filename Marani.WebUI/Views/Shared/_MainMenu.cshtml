<!-- Header Section Begin -->
<header class="header-section">
    <div class="container-fluid">
        <div class="inner-header">
            <div class="logo">
                <a asp-controller="home" asp-action="index"><img style="height:60px;" src="~/assets/img/logos/winiveria.png" alt=""></a>
            </div>
            <div class="header-right">
                @*<img src="~/assets/img/icons/search.png" alt="" class="search-trigger">*@
                <a asp-controller="Shop" asp-action="Wishlist">
                    <img style="height:30px;" src="~/assets/img/icons/favs-star.png" alt="">
                </a>
                <a asp-controller="Shop" asp-action="Basket">
                    <img style="height:30px;" src="~/assets/img/icons/addtobasket.png" alt="">

                </a>

                @*  <a href="#">
                <i class="fa fa-heart"></i>
                </a>
                <a href="#">
                <i class="fa fa-basket-shopping"></i>
                </a>*@
            </div>
            <div class="user-access">
                <a asp-controller="Account" asp-action="Register">Register</a>
                <a asp-controller="Account" asp-action="Signin" class="in">Sign in</a>
            </div>
            <nav class="main-menu mobile-menu">
                <ul>
                    <li><a asp-controller="home" asp-action="index">Home</a></li>
                    <li>
                        <a asp-controller="Shop" asp-action="index">Shop</a>
                        <ul class="sub-menu">
                            <li><a asp-controller="Shop" asp-action="Wishlist">Wishlist</a></li>
                            <li><a asp-controller="Shop" asp-action="Basket">Basket</a></li>
                        </ul>
                    </li>
                    <li><a asp-controller="home" asp-action="About">About</a></li>
                    @*<li><a asp-controller="blog" asp-action="index">Blog</a></li>*@
                    <li><a asp-controller="home" asp-action="Contact">Contact</a></li>
                    <li><a asp-controller="home" asp-action="faq">Faq</a></li>

                </ul>
            </nav>


        </div>
    </div>
</header>
<!-- Header Info Begin -->
<div class="header-info">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="header-item">
                    <img src="img/icons/delivery.png" alt="">
                    <p>Free delivery on orders over $30 in Gerogia</p>
                </div>
            </div>
            <div class="col-md-4 text-left text-lg-center">
                <div class="header-item">
                    <img src="img/icons/voucher.png" alt="">
                    <p>20% Discount for selected Wines</p>
                </div>
            </div>
            <div class="col-md-4 text-left text-xl-right">
                <div class="header-item">
                    <img src="img/icons/sales.png" alt="">
                    <p>Use Promo: MARANI2005</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Header Info End -->
<!-- Header End -->
